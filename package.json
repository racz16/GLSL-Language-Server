{
    "name": "glsl-language-server",
    "displayName": "GLSL Language Server",
    "version": "0.0.1",
    "description": "A Node-based language server for the GLSL shader language.",
    "author": {
        "name": "Rácz Zalán",
        "email": "zalan.racz.dev@gmail.com",
        "url": "https://github.com/racz16"
    },
    "homepage": "https://github.com/racz16/GLSL-Language-Server",
    "repository": {
        "type": "git",
        "url": "https://github.com/racz16/GLSL-Language-Server"
    },
    "bugs": {
        "url": "https://github.com/racz16/GLSL-Language-Server/issues",
        "email": "zalan.racz.dev@gmail.com"
    },
    "license": "MIT",
    "keywords": [
        "glsl",
        "shader",
        "webgl",
        "opengl",
        "vulkan"
    ],
    "os": [
        "win32",
        "linux",
        "darwin"
    ],
    "main": "./out/server-desktop",
    "browser": "./out/server-web",
    "engines": {
        "node": "*"
    },
    "scripts": {
        "build-production": "webpack --mode production",
        "build": "webpack",
        "watch": "webpack --watch",
        "test": "mocha ./src/**/*.spec.ts --require ts-node/register",
        "prettier-lint": "prettier --check .",
        "prettier-format": "prettier --write .",
        "eslint": "eslint ./src",
        "prepare": "husky install"
    },
    "dependencies": {
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.11"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@types/eslint__js": "^8.42.3",
        "@types/mocha": "^10.0.7",
        "@types/node": "^20.1.6",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7",
        "mocha": "^10.4.0",
        "prettier": "^3.3.2",
        "prettier-plugin-organize-imports": "^3.2.4",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.2",
        "typescript-eslint": "^7.13.1",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4"
    },
    "lint-staged": {
        "*.{ts,json,yml}": "prettier --write --ignore-unknown"
    }
}
